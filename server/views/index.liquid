{% layout "server/layouts/base.liquid" %}

{% block content %}

<h1 class="h1">{{ title }}</h1>

{% comment %} 🌶️🌶️🌶️ LANDING PAGE 🌶️🌶️🌶️ {% endcomment %}
{% if not token.access_token %}
  <a id="login-button" href="/login">
    Log in!
  </a>

  {% else %}
  {% comment %} 🤠🤠🤠 HOMEPAGE 🤠🤠🤠 {% endcomment %}
   <aside>
     {% for board in boardData %}
       <details name="boards">
         <summary>
           <img src="{{ board.media.image_cover_url }}">
           <p>{{ board.name }}</p>
         </summary>
         <div>
           {% for pin in pinsPerBoard[board.id] %}
             <div class="image box draggable" draggable="true">
               <img src="{{ pin.media.images['400x300'].url }}" alt="">
             </div>
           {% endfor %}
         </div>
       </details>
     {% endfor %}

   </aside>

  <section class="journal drop">
    <div class="dropzone"></div>
      <ul class="binder">
        <li></li>
        <li></li>
        <li></li>
      </ul>
    <div class="dropzone"></div>
      <ul class="binder">
        <li></li>
        <li></li>
        <li></li>
      </ul>
  </section>
{% endif %}



{% endblock %}
